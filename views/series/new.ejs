<% include ../partials/header %>

<div class="container">
  <div class="input-form">
    <form action="/series" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="series[name]" placeholder="Series name" />
      </div>
      <div class="form-group">
        <select class="form-control" name="series[bot]">
          <% bots.forEach(function(bot) { %>
            <% if (bot == "CR-HOLLAND|NEW") { %>
              <option value="<%= bot %>" selected><%= bot %></option>
            <% } else { %>
              <option value="<%= bot %>"><%= bot %></option>
            <% } %>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <select class="form-control" name="series[quality]">
          <option value="1080p">1080p</option>
          <option value="720p" selected>720p</option>
          <option value="480p">480p</option>
        </select>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="series[current]" placeholder="Starting episode" value="1" />
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" name="series[individual]" />
          Single episode
        </label>
      </div>
      <div class="form-group">
        <a class="btn btn-lg btn-danger" href="/series">Return</a>
        <button class="btn btn-lg btn-primary">Add</button>
      </div>
    </form>
  </div>
</div>


<% include ../partials/footer %>
